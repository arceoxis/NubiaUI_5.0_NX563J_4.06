<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dialog_Fullscreen_StatusBar">
        <item name="android:windowBackground">@drawable/color_alpha_00</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    <style name="Custom_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/PhoneDialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateUnchanged</item>
    </style>
    <style name="ThemeBase" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/public_scrollbar_horizontal</item>
        <item name="android:scrollbarThumbVertical">@drawable/public_scrollbar_vertical</item>
        <item name="android:autoCompleteTextViewStyle">@style/autoCompleteTextView</item>
        <item name="android:checkboxStyle">@style/CheckBox</item>
        <item name="android:editTextStyle">@style/editText</item>
        <item name="android:listViewStyle">@style/listview_style</item>
        <item name="android:progressBarStyle">@style/CirclProgressBarMedium</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="android:textSize">@dimen/public_text_size</item>
        <item name="android:textColor">@drawable/color_black</item>
        <item name="android:progressBarStyleLargeInverse">@style/CirclProgressBarLarge</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="my_autoCompleteTextViewStyle">@style/MyAutoCompleteTextView</item>
        <item name="MaterialProgressBarCycle">@style/material_progressbar_cycle</item>
        <item name="MaterialProgressBarHorizontal">@style/material_progressbar_horizontal</item>
    </style>
    <style name="ThemeBase.Dialog" parent="@style/ThemeBase">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
    <style name="OfficeAppTheme.Transparent" parent="@style/OfficeAppTheme">
        <item name="android:windowBackground">@drawable/color_alpha_00</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Transluent" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    <style name="WriterTheme" parent="@style/OfficeAppTheme">
        <item name="android:checkboxStyle">@style/writer_CheckBox</item>
        <item name="android:progressBarStyle">@style/writer_circlProgressBar_medium</item>
        <item name="android:progressBarStyleHorizontal">@style/writer_ProgressBar.Horizontal</item>
        <item name="android:seekBarStyle">@style/phone_writer_seekbar_style</item>
        <item name="android:radioButtonStyle">@style/writer_RadioButton</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:progressBarStyleLargeInverse">@style/writer_circlProgressBar_large</item>
        <item name="activity_theme_Style">@style/writer_theme_style</item>
        <item name="activity_theme_color">@color/public_writer_theme_color</item>
    </style>
    <style name="PdfTheme" parent="@style/OfficeAppTheme">
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:checkboxStyle">@style/pdf_checkBox_style</item>
        <item name="android:progressBarStyle">@style/pdf_circlProgressBar_medium_style</item>
        <item name="android:seekBarStyle">@style/pdf_seekbar_style</item>
        <item name="android:radioButtonStyle">@style/pdf_radioButton_style</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:progressBarStyleLargeInverse">@style/pdf_circlProgressBar_large_style</item>
        <item name="activity_theme_Style">@style/pdf_theme_style</item>
    </style>
    <style name="SpreadsheetTheme" parent="@style/OfficeAppTheme">
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:checkboxStyle">@style/SSPhoneCheckBox</item>
        <item name="android:editTextStyle">@style/SSPhoneEdittext</item>
        <item name="android:progressBarStyleHorizontal">@style/phone_ss_ProgressBar.Horizontal</item>
        <item name="android:seekBarStyle">@style/phone_ss_seekbar_style</item>
        <item name="android:radioButtonStyle">@style/SSPhoneRadioButton</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:progressBarStyleLargeInverse">@style/phone_ss_progressbar</item>
        <item name="my_autoCompleteTextViewStyle">@style/ssphone_autocomplete</item>
        <item name="activity_theme_Style">@style/phone_ss_theme_style</item>
        <item name="activity_theme_color">@color/phone_public_ss_theme_color</item>
    </style>
    <style name="PptTheme" parent="@style/OfficeAppTheme">
        <item name="android:windowBackground">@color/ppt_slide_bg_color</item>
        <item name="android:checkboxStyle">@style/PptPhoneCheckBox</item>
        <item name="android:editTextStyle">@style/PptPhoneEdittext</item>
        <item name="android:progressBarStyleHorizontal">@style/PptPhoneProgressBar.Horizontal</item>
        <item name="android:seekBarStyle">@style/PptPhoneSeekbarStyle</item>
        <item name="android:radioButtonStyle">@style/PptPhoneRadioButton</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:progressBarStyleLargeInverse">@style/PptPhoneCirclProgressBarLarge</item>
        <item name="my_autoCompleteTextViewStyle">@style/Pptphone_autocomplete</item>
        <item name="activity_theme_Style">@style/PptPhoneThemeStyle</item>
        <item name="activity_theme_color">@color/public_ppt_theme_color</item>
    </style>
</resources>
