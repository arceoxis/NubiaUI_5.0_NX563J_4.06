        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="android:textSize">@dimen/public_text_size</item>
        <item name="android:textColor">@drawable/color_black</item>
        <item name="android:progressBarStyleLargeInverse">@style/CirclProgressBarLarge</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:colorPrimary">@color/phone_home_pink_bg_color</item>
        <item name="android:colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
